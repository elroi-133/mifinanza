<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Mi Finanza"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Versión 1.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Desarrollado por: Roissmer Lanza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo electrónico: roissmerlanza@gmail.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Telefono: +58 412 188 48 58" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Descripción: Esta aplicación te ayuda a gestionar tus finanzas personales." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 RoissmerLanza. Todos los derechos reservados." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/facebook_icon" />

                <ImageView
                    android:id="@+id/instagram_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/instagram_icon" />

                <ImageView
                    android:id="@+id/whatsapp_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/whatsapp_icon" />

                <ImageView
                    android:id="@+id/telegram_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/telegram_icon" />

                <ImageView
                    android:id="@+id/linkedin_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/linkedin_icon" />

                <ImageView
                    android:id="@+id/github_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/github_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/facebook_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://www.facebook.com/roissmerlanza/" />

                <TextView
                    android:id="@+id/instagram_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://www.instagram.com/roissmer_lanza/" />

                <TextView
                    android:id="@+id/whatsapp_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://wa.me/584121884858" />

                <TextView
                    android:id="@+id/telegram_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://t.me/Elroi133" />

                <TextView
                    android:id="@+id/linkedin_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://www.linkedin.com/in/roissmer-lanza/" />

                <TextView
                    android:id="@+id/github_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="https://elroi-133.github.io/curriculum/" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>